{
	"name": "lunamobile",
	"version": "0.1.1",
	"private": true,
	"devDependencies": {
		"babel-core": "7.0.0-bridge.0",
		"babel-jest": "23.6.0",
		"metro-react-native-babel-preset": "0.49.0",
		"babel-eslint": "^10.0.1",
		"babel-preset-env": "^1.7.0",
		"eslint": "^5.8.0",
		"eslint-config-prettier": "^3.1.0",
		"eslint-plugin-react": "^7.11.1",
		"eslint-plugin-react-native": "^3.5.0",
		"eslint-watch": "^4.0.2",
		"husky": "^1.1.2",
		"jest": "^23.1.0",
		"jest-react-native": "^18.0.0",
		"lint-staged": "^8.0.3",
		"prettier": "^1.14.3",
		"pretty-quick": "^1.8.0",
		"react-test-renderer": "16.3.1"
	},
	"scripts": {
		"eslint": "esw src",
		"watch": "esw -w --changed src/**",
		"start": "react-native start",
		"android-dev": "ENVFILE=.env.development react-native run-android",
		"android-staging": "ENVFILE=.env.staging react-native run-android",
		"android-production": "ENVFILE=.env.production react-native run-android",
		"ios": "react-native run-ios",
		"test": "jest",
		"build-debug-android": "react-native bundle --dev false --platform android --entry-file index.js --bundle-output ./android/app/build/intermediates/assets/debug/index.android.bundle --assets-dest ./android/app/build/intermediates/res/merged/debug && cd android && ./gradlew assembleDebug && cd .. && mkdir -p ./dist && rm -f ./dist/luna-android-debug.apk && cp ./android/app/build/outputs/apk/app-debug.apk ./dist/luna-android-debug.apk",
		"build-debug-android-dev": "export ENVFILE=.env.development && npm run build-debug-android",
		"build-debug-android-staging": "export ENVFILE=.env.staging && npm run build-debug-android",
		"build-debug-android-production": "export ENVFILE=.env.production && npm run build-debug-android",
		"build-release-android": "export ENVFILE=.env.production && cd android && ./gradlew assembleRelease && cd .. && mkdir -p ./dist && rm -f ./dist/luna-android-release.apk && cp ./android/app/build/outputs/apk/app-release.apk ./dist/luna-android-release.apk"
	},
	"jest": {
		"preset": "react-native",
		"transform": {
			"^.+\\.(js)$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
		},
		"transformIgnorePatterns": [
			"/node_modules/(?!native-base)/"
		],
		"setupFiles": [
			"<rootDir>/__mocks__/react-native-languages.js",
			"<rootDir>/__mocks__/react-navigation.js"
		]
	},
	"dependencies": {
		"@ptomasroos/react-native-multi-slider": "^1.0.0",
		"axios": "0.18.0",
		"create-react-class": "15.6.3",
		"humps": "^2.0.1",
		"moment": "^2.22.2",
		"native-base": "2.8.1",
		"qs": "6.5.2",
		"react": "^16.6.0-alpha.8af6728",
		"react-native": "^0.57.4",
		"react-native-config": "https://github.com/darekg11/react-native-config/tarball/master",
		"react-native-extended-stylesheet": "0.10.0",
		"react-native-fabric": "https://github.com/corymsmith/react-native-fabric/tarball/master",
		"react-native-i18n": "2.0.15",
		"react-native-keyboard-aware-scroll-view": "^0.7.4",
		"react-native-languages": "3.0.1",
		"react-native-linear-gradient": "2.4.3",
		"react-native-modal-datetime-picker": "^6.0.0",
		"react-native-progress": "^3.5.0",
		"react-native-splash-screen": "3.1.1",
		"react-navigation": "2.18.2",
		"react-redux": "5.0.7",
		"redux": "4.0.0",
		"redux-logger": "^3.0.6",
		"redux-thunk": "2.3.0",
		"validator": "^10.8.0"
	},
	"lint-staged": {
		"linters": {
			"*.{js,jsx}": [
				"pretty-quick --staged",
				"eslint --fix",
				"git add"
			]
		},
		"ignore": [
			"**/**.json"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"rnpm": {
		"assets": [
		  "./src/assets/fonts/"
		]
	  }
}
